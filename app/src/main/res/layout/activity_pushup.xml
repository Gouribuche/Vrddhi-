<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pushup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffebcd"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/pushup" />
        <TextView
            android:layout_width="360dp"
            android:layout_height="110dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="PUSH UP
            COUNTER"
            android:textAlignment="center"
            android:textColor="#DF9C5B56"
            android:textSize="34sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="360dp"
            android:layout_height="165dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:text="@string/pushuptext"
            android:textAlignment="center"
            android:textColor="@color/purple_200"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/pushupwelcome"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonbg1"
            android:gravity="center"
            android:onClick="OnClickFind"
            android:text="START"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

    </LinearLayout>
</RelativeLayout>